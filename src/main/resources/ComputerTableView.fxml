<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adrian.lai.ComputerController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TableView fx:id="computerTable" prefHeight="200.0" prefWidth="593.0" GridPane.columnIndex="4" GridPane.rowIndex="2">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="34.40002363920212" resizable="false" text="ID">
                <cellValueFactory><PropertyValueFactory property="id" /></cellValueFactory>
        </TableColumn>
          <TableColumn fx:id="creationColumn" prefWidth="123.19995498657227" resizable="false" text="Creation Date">
              <cellValueFactory><PropertyValueFactory property="creationDate" /></cellValueFactory>
      </TableColumn>
            <TableColumn fx:id="lastColumn" prefWidth="142.40000915527344" resizable="false" text="Last Revision ">
                <cellValueFactory><PropertyValueFactory property="lastRevisionDate" /></cellValueFactory>
   </TableColumn>
            <TableColumn fx:id="nextColumn" prefWidth="144.00006103515625" resizable="false" text="Next Revision">
                <cellValueFactory><PropertyValueFactory property="nextRevisionDate" /></cellValueFactory>
</TableColumn>
            <TableColumn fx:id="revisionColumn" prefWidth="159.199951171875" resizable="false" text="Needs Revision">
                <cellValueFactory><PropertyValueFactory property="needsRevision" /></cellValueFactory>
        </TableColumn>
        </columns>
      </TableView>
      <HBox prefHeight="15.0" prefWidth="600.0" GridPane.columnIndex="4" GridPane.rowIndex="3">
         <children>
            <Button mnemonicParsing="false" onAction="#addRow" text="Add new computer" />
            <Button fx:id="revision" mnemonicParsing="false" onAction="#updateRowRevision" text="Update Revision " />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#deleteRow" prefHeight="19.0" prefWidth="105.0" text="Delete computer" />
         </children>
      </HBox>
   </children>
</GridPane>
